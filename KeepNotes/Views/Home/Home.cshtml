@using KeepNotes.Models;
@{
    ViewData["Title"] = "Keep Notes | Home";
    var user = ViewBag.User;
}
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <img src="/assest/img/logo.png" alt="Logo" height="45px">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item active mx-2">
                    <a class="nav-link" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item text-light">
                    <a class="nav-link">Welcome @user.Username</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="UpdateProfile">Update Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<center><h1>All Notes</h1></center>

<div class="container">
        <div class="card-deck">
    @foreach (var item in ViewBag.Notes) {
            string category = "";
            @foreach(var cat in ViewBag.Category)
            {
                if(cat.CategoryId == item.CategoryId)
                {
                    category = cat.Name;
                }
            }
            <div class="card border-primary my-2">
                @*<div class="card-header">
                    @item.Title
                </div>*@
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@category</h6>
                    <p class="card-text">@item.Text</p>
                </div>
            </div>
        
    }
           </div>
    
    <label>@user.Id</label>
    <label>@user.Username</label>
    <label>@user.Email</label>
    <label>@user.Contact</label>

    <a asp-controller="Category" asp-action="Index">Categories</a>
    <a asp-controller="Note" asp-action="Index">Notes</a>


    <div>
    </div>
</div>