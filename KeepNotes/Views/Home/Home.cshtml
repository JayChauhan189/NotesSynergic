@using KeepNotes.Models;
@{
    ViewData["Title"] = "Keep Notes | Home";
    var user = ViewBag.User;
}
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <img src="/assest/img/logo.png" alt="Logo" height="45px">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item active mx-2">
                    <a class="nav-link" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item text-light">
                    <a class="nav-link">Welcome @user.Username</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="UpdateProfile">Update Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<center><h1>All Notes</h1></center>

<div class="container-fluid">

    <div class="card border-primary" style="width: 18rem;">
        <div class="card-header">
            Card Header
        </div>
        <div class="card-body">
            <h5 class="card-title">Card Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">Card Subtitle</h6>
            <p class="card-text">Some Quick Text</p>
        </div>
    </div>
    
    <label>@user.Id</label>
    <label>@user.Username</label>
    <label>@user.Email</label>
    <label>@user.Contact</label>

    <a asp-controller="Category" asp-action="Index">Categories</a>
    <a asp-controller="Note" asp-action="Index">Notes</a>


    <div>
    </div>
</div>