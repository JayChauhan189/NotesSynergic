@using KeepNotes.Models;
@{
    ViewData["Title"] = "Keep Notes | Home";
    var user = ViewBag.User;
}
<style>
    body {
        background-image: linear-gradient(to right,#B2FEFA,#0ED2F7);
    }
</style>
<center><h1>All Notes</h1></center>

<div class="container">
        <div class="card-deck">
    @foreach (var item in ViewBag.Notes) {
            string category = "";
            @foreach(var cat in ViewBag.Category)
            {
                if(cat.CategoryId == item.CategoryId)
                {
                    category = cat.Name;
                }
            }
            <div class="card border-success my-2">
                @*<div class="card-header">
                    @item.Title
                </div>*@
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@category</h6>
                    <p class="card-text">@item.Text</p>
                </div>
            </div>
        
    }
           </div>
    @*
    <label>@user.Id</label>
    <label>@user.Username</label>
    <label>@user.Email</label>
    <label>@user.Contact</label>*@
    <div>
    </div>
</div>